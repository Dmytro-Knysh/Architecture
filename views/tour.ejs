<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../public/style/main.css" rel="stylesheet" type="text/css">
    <title>Тури</title>
</head>
<body class="body">
    <a class="btn btn-outline-secondary" href="/" style="margin-left: 50px;">На головну</a>
    <h1 class="text-center">Список турів</h1>
    <div class="table-responsive">
        <table class="table table-primary table-hover table-sm">
        <tr>
            <th>ID туру</th>
            <th>Країна</th>
            <th>ID міста</th>
            <th>Тип транспорту</th>
            <th>Ціна</th>
            <th>Опис туру</th>
            <th>Кількість турів</th>
            <th>Тип туру</th>
        </tr>
    <%for (var i = 0; i < tour1.length; i++){%>
        <tr>
            <td>
                <%= tour1[i].tourId%>
            </td>
            <td>
                <%= tour1[i].country%>
            </td>
            <td>
                <%= tour1[i].cityId%>
            </td>
            <td>
                <%= tour1[i].transportType%>
            </td>
            <td>
                <%= tour1[i].price%>
            </td>
            <td>
                <%= tour1[i].description%>
            </td>
            <td>
                <%= tour1[i].capacity%>
            </td>
            <td>
                <%= tour1[i].tourType%>
            </td>
            <td style="background-color: white;">
                <a class="btn btn-danger" href="/api/tour/delete/<%= tour1[i].tourId%>">
                    Видалити
                </a>
            </td>
            <td style="background-color: white;">
                <a class="btn btn-info" href="/api/tour/<%= tour1[i].tourId%>"> Редагувати</a>
            </td>
        </tr>
        <% } %>
    </table>
    </div>
    <h2 class="text-center">
        Додати тур
    </h2>
    <form action="tour" method="POST" class="text-center">
        <div class="mb-3">
        <label class="form-label">
            ID туру
            <input type="number" placeholder="id" class="form-control" id="" name="tourId" min="1">
        </label class="form-label">
        <label class="form-label">
            Назва країни
            <input type="text" class="form-control" placeholder="name" id="country" name="country">
        </label>
        <label>
            ID міста
            <input type="number" class="form-control" placeholder="cityId" id="cityId" name="cityId">
        </label>
        <label>
            Тип транспорту
            <input type="text" class="form-control" placeholder="transportType" id="transportType" name="transportType">
        </label>
        <label>
            Ціна
            <input type="number" class="form-control" placeholder="price" id="price" name="price">
        </label>
        <label>
            Опис туру
            <input type="text" class="form-control" placeholder="description" id="description" name="description">
        </label>
        <label>
            Кількість турів
            <input type="number" class="form-control" placeholder="capacity" id="capacity" name="capacity">
        </label>
        <label for="tourType">Тип туру (Standard/Custom)</label>
            <input type="text" class="form-control" placeholder="tourType" id="tourType" name="tourType">
        </label>
        </div>
        <button type="submit" class="btn btn-primary">Додати</button>
    </form>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" 
 integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" 
 crossorigin="anonymous"></script>
</body>

</html> 